/* pages/product/detail.wxss */

.date-item {
  padding: 15rpx 10rpx;
}

.date-item-active {
  border-bottom: 4rpx solid #0af;
  color: #0af;
}

.b-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  padding: 20rpx;
  box-sizing: border-box;
}

.btn-submit {
  display: inline-block;
  background-color: #30b8fd;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
  width: 60vw;
}

.btn-reset {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background-color: #e8e8e8;
  color: #666;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  font-size: 28rpx;
  width: 80rpx;
}

.select-mark {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.7);
}

.select-box {
  position: relative;
  top: 50%;
  left: 5vw;
  width: 90vw;
  background: #fff;
  z-index: 99;
  border-top: 1rpx solid #eee;
  border-radius: 10rpx;
  transform: translateY(-50%);
}

.select-box-ft {
  padding: 20rpx;
}

.select-box-ft .button {
  border: 0;
  border-radius: 0;
  background: #eee;
  text-align: center;
  font-size: 30rpx;
  height: 10vh;
  line-height: 10vh;
}

.select-box-hd {
  font-size: 30rpx;
  padding: 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.select-box-bd {
  padding: 5vw 0;
  /* padding:5vw;
  margin-left:-5vw; */
}

.select-item {
  display: inline-block;
  width: 37vw;
  margin-left: 5vw;
  background: #fff;
  margin-bottom: 20rpx;
}

.day-list {
  white-space: nowrap;
  overflow: auto;
}

.day-list-item {
  display: inline-block;
  width: 120rpx;
}

.select-times {
  margin-left: -5vw;
}

.select-times-item {
  display: inline-block;
  width: 42vw;
  margin-left: 5vw;
  background: #fff;
  margin-bottom: 20rpx;
}

.btn {
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  padding: 0 20rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.btn.btn-green {
  border: 1rpx solid #7ed321;
  background: url("data:image/png;base64,") no-repeat right -5rpx bottom -5rpx;
  background-size: contain;
}
